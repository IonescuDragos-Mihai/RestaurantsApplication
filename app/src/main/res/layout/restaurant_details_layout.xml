<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:maxWidth="@dimen/max_width_card_view"
    android:maxHeight="@dimen/dimension_110dp"
    android:paddingEnd="@dimen/padding_8">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/dimension_90dp"
        android:layout_height="@dimen/dimension_110dp"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_restaurants"
            android:layout_width="@dimen/dimension_80dp"
            android:layout_height="@dimen/dimension_80dp"
            android:layout_gravity="center" />


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>